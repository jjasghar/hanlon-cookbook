mk_tce_mirror: http://localhost:2157/tinycorelinux
node_expire_timeout: 300
persist_host: <%= node['hanlon']['persist_host'] %>
persist_mode: <%= node['hanlon']['persist_mode'] %>
persist_password: '<%= node['hanlon']['persist_password'] %>'
persist_port: <%= node['hanlon']['persist_port'] %>
persist_timeout: <%= node['hanlon']['persist_timeout'] %>
persist_username: '<%= node['hanlon']['persist_username'] %>'
register_timeout: 120
rz_mk_boot_debug_level: Logger::ERROR
rz_mk_boot_kernel_args: ''
sui_allow_access: 'true'
sui_mount_path: /docs